<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="loginHeader">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="loginButton" parent="viewParent">
        <item name="android:background">@drawable/login_button_bk</item>
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="modifiedEditText" parent="parent">
        <item name="android:textSize">@dimen/newsMoreTextSize</item>
        <item name="android:backgroundTint">@color/primaryTextColor</item>
    </style>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/font_family_quicksand</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="materialButtonStyle">@style/AppTheme.Button</item>
    </style>

    <style name="AppThemeDark" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/font_family_quicksand</item>
    </style>

    <style name="GreyTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/grey_400</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/font_family_quicksand</item>
        <!--<item name="android:windowLightStatusBar">false</item>-->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="AppThemeTransparente" parent="AppTheme">
        <!-- Other attributes like colorPrimary, colorAccent etc. -->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RaisedButtonAccent" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:minWidth">88dp</item>
    </style>

    <style name="RaisedButtonWhite" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/white</item>
        <item name="colorControlHighlight">@color/primaryTextColor</item>
        <item name="android:textColor">@drawable/selector_raised_button_textcolor</item>
    </style>

    <style name="FlatButtonNormal" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
    </style>

    <style name="FlatButtonAccent" parent="Theme.AppCompat.Light">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="FlatButtonGrey" parent="Theme.AppCompat.Light">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="FlatButtonLightText" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
    </style>
    <style name="RaisedButtonLightText" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="FlatButtonDarkText" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
    </style>

    <style name="TextViewAsInputEditText" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textColor">@color/grey_500</item>
    </style>

    <style name="ToolBarEditTextWhiteTheme" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/abc_text_size_subtitle_material_toolbar</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorHint">@color/light_bg_dark_hint_text</item>
        <item name="colorControlActivated">@color/primaryTextColor</item><!-- Linea inferior -->
        <item name="android:textCursorDrawable">@drawable/cursor_white</item><!-- cursor -->
    </style>

    <style name="ToolBarEditTextWhiteStyle" parent="Widget.AppCompat.EditText">
        <item name="android:paddingLeft">@dimen/padding_general_small</item>
        <item name="android:paddingRight">@dimen/padding_general_small</item>
        <item name="android:theme">@style/ToolBarEditTextWhiteTheme</item>
        <!--<item name="android:background">@null</item>
        Elimina la linea inferior (colorControlActivated) puede ser la opcion mas rapida pero si es
        un AutocompleteTextView los resultados van a tapar el texto escrito ya que no hay un background
        para que los resultados se coloquen debajo-->
    </style>

    <style name="Animations" />

    <!-- PopDownMenu -->
    <style name="Animations.PopDownMenu" />

    <style name="Animations.PopDownMenu.Left">
        <item name="android:windowEnterAnimation">@anim/grow_from_topleft_to_bottomright</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_bottomright_to_topleft</item>
    </style>

    <style name="Animations.PopDownMenu.Right">
        <item name="android:windowEnterAnimation">@anim/grow_from_topright_to_bottomleft</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_bottomleft_to_topright</item>
    </style>

    <style name="Animations.PopDownMenu.Center">
        <item name="android:windowEnterAnimation">@anim/grow_from_top</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_bottom</item>
    </style>

    <!-- PopUpMenu -->
    <style name="Animations.PopUpMenu" />

    <style name="Animations.PopUpMenu.Left">
        <item name="android:windowEnterAnimation">@anim/grow_from_bottomleft_to_topright</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_topright_to_bottomleft</item>
    </style>

    <style name="Animations.PopUpMenu.Right">
        <item name="android:windowEnterAnimation">@anim/grow_from_bottomright_to_topleft</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_topleft_to_bottomright</item>
    </style>

    <style name="Animations.PopUpMenu.Center">
        <item name="android:windowEnterAnimation">@anim/grow_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_top</item>
    </style>

    <style name="QuickTheme">
        <item name="android:elevation" tools:targetApi="lollipop">6dp</item>
    </style>

    <!--New styles for Material Components-->
    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">20dp</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:height">@dimen/button_height</item>
    </style>

</resources>