<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:clickable="true"
    style="@android:style/Widget.ActionButton">

    <ImageView
        android:id="@+id/icon"
        app:srcCompat="@drawable/ic_camion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:contentDescription="@string/mi_pedido"/>

    <TextView
        android:id="@+id/tv_contador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/icon"
        android:background="@drawable/shape_circle_notification"
        android:minWidth="17sp"
        android:paddingBottom="1.7dp"
        android:paddingLeft="3dp"
        android:paddingRight="2.7dp"
        android:paddingTop="1.7dp"
        android:text="0"
        android:gravity="center"
        android:textColor="@color/secondary_text"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_monto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="17sp"
        android:textSize="11sp"
        android:textColor="@color/secondary_text"
        android:layout_centerHorizontal="true"
        android:text="S/.0.00"
        android:layout_below="@+id/icon"
        android:layout_marginRight="0dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"/>
</RelativeLayout>