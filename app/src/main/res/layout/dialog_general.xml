<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_general_small"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/img_icon"
        android:layout_margin="@dimen/margin_vertical_medium"
        android:layout_width="@dimen/image_size_dialog"
        android:layout_height="@dimen/image_size_dialog"
        app:srcCompat="@drawable/app_icon"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/tv_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_medium"
        android:gravity="center"
        android:text="Texto"/>
    <TextView
        android:id="@+id/tv_mensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Texto"/>
</LinearLayout>