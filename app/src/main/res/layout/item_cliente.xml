<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_general_small">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_between_views"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/icon_cliente"/>
    <TextView
        android:id="@+id/tv_razon_social"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/icon"
        android:text="CLIENTE CLIENTE CLIENTE CLIENTE CLIENTE CLIENTE CLIENTE CLIENTE"/>
    <TextView
        android:id="@+id/tv_tipo_documento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_razon_social"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/icon"
        android:text="RUC:"/>
    <TextView
        android:id="@+id/tv_documento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_tipo_documento"
        android:layout_alignBaseline="@id/tv_tipo_documento"
        android:layout_marginLeft="@dimen/margin_between_views"
        android:text="20600000000"/>
    <TextView
        android:id="@+id/tv_direccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_documento"
        android:maxLines="1"
        android:layout_toRightOf="@+id/icon"
        android:text="DIRECCION DIRECCION DIRECCION DIRECCION DIRECCION"/>
</RelativeLayout>